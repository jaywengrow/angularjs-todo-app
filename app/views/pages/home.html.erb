<h1>Todo List!</h1>
<div ng-app="app">
  <div ng-controller="todoCtrl">

    <input ng-model="newTask">
    <button ng-click="addTask(newTask)">Add Task</button>

    <ul>
      <li ng-repeat="task in tasks">{{ task.name }}</li>
    </ul>

    <h5>items left</h5>

    <button>Clear Completed Tasks</button>

  </div>
</div>

